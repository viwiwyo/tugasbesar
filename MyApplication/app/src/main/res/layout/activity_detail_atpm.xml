<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.web.yogataupan.infomobil.detail_atpm">

    <TextView
        android:id="@+id/nm_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="atpm"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/imageatpm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/detnews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nm_news"
        android:layout_marginTop="34dp"
        android:text="info atpm"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageatpm"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="btt_lokasi"
        android:layout_alignEnd="@+id/imageatpm"
        android:layout_alignRight="@+id/imageatpm"
        android:layout_below="@+id/nm_news"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/navi" />
</RelativeLayout>
